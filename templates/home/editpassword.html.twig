{% extends 'base.html.twig' %}

{% block title %}AUT'O - Modification du mot de passe {% endblock %}

{% block body %}
    <!-- Axentix CSS minified version -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.2.1/dist/axentix.min.css">
    <div class="grix xs4 container">
        {% for message in app.flashes('error') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-1 red light-4 text-red text-dark-4">{{ message }}</div>
            </div>
        {% endfor %}
        <div class="col-xs4">
            <h1>Modification de votre mot de passe</h1>
            <form method="post">
                <div class="form-field">
                    <label for="pwd">Mot de passe</label>
                    <input type="password" id="pwd" name="pwd" class="form-control">
                </div>
                <div class="form-field">
                    <label for="pwdCheck">Confirmer le mot de passe</label>
                    <input type="password" id="pwdCheck" name="pwdCheck" class="form-control">
                </div>
                <button class="btn shadow-1 rounded-1 blue">Valider</button>
            </form>
        </div>

    </div>
{% endblock %}